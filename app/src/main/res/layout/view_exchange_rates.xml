<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="android.support.constraint.ConstraintLayout"
    tools:background="@color/gray">

    <TextView
        android:id="@+id/date"
        style="@style/App.Theme.Widget.TextView.Dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="11.3.2066" />

    <TextView
        android:id="@+id/mainCurrency"
        style="@style/App.Theme.Widget.TextView.Dark.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date"
        tools:text="UAH" />

    <TextView
        android:id="@+id/currency0"
        style="@style/App.Theme.Widget.TextView.Dark.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/currency1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/currencyIcon0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainCurrency"
        app:layout_constraintVertical_chainStyle="spread_inside"
        tools:text="100$" />


    <TextView
        android:id="@+id/currencyIcon0"
        style="@style/App.Theme.Widget.TextView.Dark.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/currencyIcon1"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/currency0"
        app:layout_constraintTop_toBottomOf="@+id/mainCurrency"
        app:layout_constraintVertical_chainStyle="spread_inside"
        tools:text="USD" />

    <TextView
        android:id="@+id/currency1"
        style="@style/App.Theme.Widget.TextView.Dark.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/currency2"
        app:layout_constraintLeft_toRightOf="@+id/currencyIcon1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currency0"
        tools:text="100$" />


    <TextView
        android:id="@+id/currencyIcon1"
        style="@style/App.Theme.Widget.TextView.Dark.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/currencyIcon2"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/currency1"
        app:layout_constraintTop_toBottomOf="@+id/currencyIcon0"
        tools:text="USD" />

    <TextView
        android:id="@+id/currency2"
        style="@style/App.Theme.Widget.TextView.Dark.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/currency3"
        app:layout_constraintLeft_toRightOf="@+id/currencyIcon2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currency1"
        tools:text="100$" />

    <TextView
        android:id="@+id/currencyIcon2"
        style="@style/App.Theme.Widget.TextView.Dark.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/currencyIcon3"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/currency2"
        app:layout_constraintTop_toBottomOf="@+id/currencyIcon1"
        tools:text="USD" />

    <TextView
        android:id="@+id/currency3"
        style="@style/App.Theme.Widget.TextView.Dark.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/currencyIcon3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currency2"
        tools:text="100$" />

    <TextView
        android:id="@+id/currencyIcon3"
        style="@style/App.Theme.Widget.TextView.Dark.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/currency3"
        app:layout_constraintTop_toBottomOf="@+id/currencyIcon2"
        tools:text="USD" />

</merge>