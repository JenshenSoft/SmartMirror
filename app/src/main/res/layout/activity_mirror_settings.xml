<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.settings.mirror.MirrorSettingsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="@string/settings" />

    <LinearLayout
        android:orientation="horizontal"
        android:padding="@dimen/offset_small1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:text="@string/mirror_settings.enable_precipitation_on_mirror"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.SwitchCompat
            android:layout_marginStart="@dimen/offset_small1"
            android:id="@+id/enableWeatherAnimation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:padding="@dimen/offset_small1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:text="@string/mirror_settings.show_user_info_on_mirror"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.SwitchCompat
            android:layout_marginStart="@dimen/offset_small1"
            android:id="@+id/showAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>
